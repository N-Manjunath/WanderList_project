<% layout('layout/boilerplate') -%>
<body>
  <div class="row offset-2">
    <div class="col-8">
      <h4><%= listing.title %></h4>
      <div class="card listing-card" style="width: 18rem;">
       <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" class="card-img-top mb-2" alt="no image found">
<div class="card-body">
 <h5>
  The Author: 
  <%= listing.owner ? listing.owner.username : "Unknown" %>
</h5>

  <div class="mb-2">
    <%= listing.description ? listing.description : "No description available" %>
  </div>
</div>
          <div class="mb-2">
            <p>&#8377;<%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "Price not available" %></p>
          </div>
          <div class="mb-2"><%= listing.category %></div>
          <div class="mb-2"><%= listing.location %></div>
          <div class="mb-2"><%= listing.country %></div>
        </div>
      </div>

      <div class="row">
        <div class="col-3 mb-5">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
        </div>
        <div class="col-3 mb-5">
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <% if (CUser) { %>
  <div class="col-3 offset-2">
    <form action="/listings/<%= listing.id %>/reviews" method="post" class="needs-validation" novalidate>
      <div>
        <fieldset class="starability-slot">
          <legend>Rating</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div>
        <label for="comment" class="form-label">Comment</label>
        <textarea id="comment" name="review[comment]" rows="5" cols="10" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter valid comment</div>
      </div>
      <button class="btn btn-primary">Submit</button>
    </form>
  </div>
  <% } %>

  <hr/>
  <div class="row offset-2">
    <% for (let review of listing.reviews) { %>
    <div class="card col-4 mb-3 ms-2">
      <div class="card-body">
        <h5 class="card-title"><%= review.author ? review.author.username : "Anonymous" %></h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %> Star</p>
        <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
      </div>
      <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review.id %>?_method=DELETE">
        <button class="btn btn-danger my-3">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</body>


 

